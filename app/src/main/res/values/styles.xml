<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="sportCategorySpinner">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="itemImageList">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:contentDescription">@string/background_image</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="itemTextList">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#333</item>
        <item name="android:padding">60dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium.Inverse</item>
        <item name="android:text">@string/name_surname</item>
    </style>

    <style name="itemImageList.LandScape">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:contentDescription">@string/background_image</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="itemTextList.LandScape">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#333</item>
        <item name="android:padding">80dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium.Inverse</item>
        <item name="android:text">@string/name_surname</item>
    </style>

    <style name="itemImageGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:contentDescription">@string/background_image</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="itemTextGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#333</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium.Inverse</item>
        <item name="android:text">Name Surname</item>
    </style>

</resources>
